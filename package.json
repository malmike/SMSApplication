{
  "name": "sms-application",
  "version": "0.0.0",
  "description": "SMSApplication",
  "main": "server.js",
  "scripts": {
    "tsc": "tsc",
    "copy-public": "cp -r src/public dist",
    "start": "tsc && npm run copy-public && node dist/index.js",
    "start-dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "mocha --exit --require ts-node/register src/**/*.spec.ts",
    "test-coverage": "nyc mocha --exit --require ts-node/register src/**/*.spec.ts",
    "test-dev": "nodemon --ext ts --exec 'mocha --require ts-node/register src/**/*.spec.ts'"
  },
  "author": {
    "name": "MALE MICHAEL"
  },
  "dependencies": {
    "@types/node": "10.12.18",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.19",
    "swagger-jsdoc": "^3.2.7",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.3.22",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "@types/jsonwebtoken": "^8.3.2",
    "chai": "^4.2.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon": "^7.3.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.0.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/tests/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
